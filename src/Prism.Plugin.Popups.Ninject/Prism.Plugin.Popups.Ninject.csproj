<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard1.3;netstandard1.5</TargetFrameworks>
    <PackageTargetFallback>$(PackageTargetFallback);portable-net45+win8+wpa81+wp8</PackageTargetFallback>
    <DIContainer>Ninject</DIContainer>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Prism.Ninject.Forms" Version="6.3.0" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="../Prism.Plugin.Popups.Shared/**/*.cs">
      <Link>Shared%(RecursiveDir)%(Filename)%(Extension)</Link>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <Compile Update="..\Prism.Plugin.Popups.Shared\BackgroundPopupDismissalBehavior.cs">
      <Link>Shared.\BackgroundPopupDismissalBehavior.cs</Link>
    </Compile>
    <Compile Update="..\Prism.Plugin.Popups.Shared\PopupExtensions.cs">
      <Link>Shared.\PopupExtensions.cs</Link>
    </Compile>
    <Compile Update="..\Prism.Plugin.Popups.Shared\PopupPageMissingException.cs">
      <Link>Shared.\PopupPageMissingException.cs</Link>
    </Compile>
    <Compile Update="..\Prism.Plugin.Popups.Shared\PopupPageNavigationServiceBase.cs">
      <Link>Shared.\PopupPageNavigationServiceBase.cs</Link>
    </Compile>
  </ItemGroup>
</Project>